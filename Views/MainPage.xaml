<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JadeMaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                x:Name="Message"
                FontSize="18"
                HorizontalOptions="Center"
                />

            <Button
                x:Name="CounterBtn"
                Text="New note!"
                SemanticProperties.Hint="Create a new note button"
                Clicked="CreateNewNote"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
