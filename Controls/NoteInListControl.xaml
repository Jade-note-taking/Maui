<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    Margin="0,10,0,0"
    x:Class="JadeMaui.Controls.NoteInListControl"
    x:DataType="models:Note"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:models="clr-namespace:JadeMaui.Models"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Frame Style="{StaticResource NoteInList}">
        <FlexLayout Padding="20,0,0,0">
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="{Binding location}"
                VerticalTextAlignment="Center" />
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="/"
                VerticalTextAlignment="Center" />
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="{Binding name}"
                VerticalTextAlignment="Center" />
        </FlexLayout>
    </Frame>
</ContentView>